<group name="junos,rsyslog">

  <rule id="88000" level="0">
    <decoded_as>cisco-asa</decoded_as>
    <description> Firewall infos</description>
  </rule>


  <rule id="4726" level="0">
    <if_sid>4700</if_sid>
    <match>alarmd|craftd|cron|last|xntpd</match>
    <description>access switch/router juniper infos</description>
  </rule>
   

 <rule id="4728" level="3">
    <if_sid>4726</if_sid>
    <match>unreachable</match>
    <description>unreachable actions infos.</description>
  </rule>

   <rule id="4729" level="4">
    <if_sid>4726</if_sid>
    <match>alarm</match>
    <description>alarm  actions infos.</description>
  </rule>

 <rule id="88001" level="2">
    <if_sid>80000</if_sid>
    <match>CREATE</match>
    <description> Firewall session created</description>
  </rule>

 <rule id="88002" level="2">
    <if_sid>80000</if_sid>
    <match>CLOSE</match>
    <description> Firewall session closed info</description>
  </rule>


  <rule id="88010" level="0">
    <decoded_as>Junos-switch-Info</decoded_as>
    <description>access switch/router juniper infos</description>
  </rule>

  <rule id="88011" level="4">
    <if_sid>88010</if_sid>
    <match>trap</match>
    <description>trap genrated Juniper </description>
  </rule>

 <rule id="88012" level="0">
    <decoded_as>Junos-switch-FPC-Info</decoded_as>
    <description>access switch/router juniper infos</description>
  </rule>
  
  <rule id="88013" level="0">
    <decoded_as>Junos-switch-Cron-Info</decoded_as>
    <description>access switch/router juniper infos</description>
  </rule>

</group>
